{
  "name": "iconbuilder",
  "version": "1.0.0",
  "description": "A Figma plugin to build and export icons as reusable components, with support for animations and future frameworks.",
  "main": "code.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "watch": "npm run build -- --watch"
  },
  "keywords": [
    "figma",
    "plugin",
    "icons",
    "export",
    "framer-motion",
    "iconbuilder"
  ],
  "author": {
    "name": "IvanDF",
    "url": "https://ivandf.netlify.app"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/IvanDF/icon-builder.git"
  },
  "bugs": {
    "url": "https://github.com/IvanDF/icon-builder/issues"
  },
  "homepage": "https://github.com/IvanDF/icon-builder#readme",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "*",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2"
  }
}
